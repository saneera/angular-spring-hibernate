	</definition>
	<definition name="contactsList" extends="master.page">
		<put-attribute name="body" value="/WEB-INF/views/protected/contacts/contacts.jsp" />
	</definition>

	<definition name="usersList" extends="master.page">
		<put-attribute name="body" value="/WEB-INF/views/protected/users/users.jsp" />
	</definition>
	
	<definition name="test" extends="master.page">
